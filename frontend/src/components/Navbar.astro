<nav
  class="w-full bg-gray-800/0 shadow-none fixed top-0 left-0 z-50 transition-all backdrop-blur-md"
  data-api-url={import.meta.env.PUBLIC_API_URL}
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-2">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div class="flex items-center flex-shrink-0">
        <a href="/" class="inline-block">
          <img
            src="/public/logo.webp"
            alt="Fútbol Analytics"
            class="w-32 h-auto"
          />
        </a>
      </div>

      <!-- Botón hamburguesa -->
      <div class="md:hidden">
        <button id="menu-toggle" class="text-gray-800 focus:outline-none">
          <i class="fas fa-bars text-2xl"></i>
        </button>
      </div>

      <!-- Centro: enlaces -->
      <div
        id="nav-center"
        class="hidden md:flex md:items-center md:space-x-6 w-full md:w-auto md:flex-1 md:justify-center mt-4 md:mt-0"
      >
      </div>

      <!-- Derecha: usuario -->
      <div
        id="nav-right"
        class="hidden md:flex items-center space-x-4 opacity-0 transition-opacity duration-200"
      >
        <!-- Los mejores de hoy link -->
        <a
          href="/losmejores"
          class="text-gray-800 hover:text-gray-600 transition-colors"
        >
          Los mejores de hoy
        </a>
      </div>
    </div>

    <!-- Menú móvil -->
    <div id="mobile-menu" class="md:hidden hidden mt-4 pb-4 px-4">
      <div id="mobile-nav-all" class="flex flex-col space-y-2"></div>
    </div>
  </div>
</nav>

<!-- Espaciador -->
<div class="h-8"></div>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const centerNav = document.getElementById("nav-center");
    const rightNav = document.getElementById("nav-right");
    const mobileMenu = document.getElementById("mobile-menu");
    const menuToggle = document.getElementById("menu-toggle");

    const clearSession = () => {
      localStorage.removeItem("access");
      localStorage.removeItem("refresh");
      localStorage.removeItem("username");
    };

    menuToggle?.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
      mobileMenu.classList.toggle("block");
    });

    async function checkToken() {
      const API_URL = document
        .querySelector("nav[data-api-url]")
        ?.getAttribute("data-api-url");

      const access = localStorage.getItem("access");
      const username = localStorage.getItem("username");

      if (!access || !API_URL) {
        clearSession();
        showGuestLinks();
        return;
      }

      try {
        const res = await fetch(`${API_URL}/api/auth/validate-token/`, {
          headers: {
            Authorization: `Bearer ${access}`,
          },
        });

        if (res.ok) {
          showUserLinks(username);
        } else {
          clearSession();
          showGuestLinks();
        }
      } catch (err) {
        clearSession();
        showGuestLinks();
      }
    }

    function showUserLinks(username) {
      const links = `
        <a href="/analisis" class="block text-base font-semibold text-gray-800 hover:text-blue-600">Partidos</a>
        <a href="/favoritos" class="block text-base font-semibold text-gray-800 hover:text-blue-600">Favoritos</a>
        <a href="/losmejores" class="block text-base font-semibold text-gray-800 hover:text-blue-600">Los mejores de hoy</a>
        <a href="/funcionalidades" class="block text-base font-semibold text-gray-800 hover:text-blue-600">Funcionalidades</a>
        <a href="/planes" class="block text-base font-semibold text-gray-800 hover:text-blue-600">Planes</a>`;

      const dropdown = `
        <div class="relative inline-block text-left group">
          <button id="user-menu-button" class="flex items-center cursor-pointer space-x-2 text-base font-semibold text-gray-900 hover:text-blue-700">
            <i class="fas fa-user"></i>
            <span id="user-name" class="text-base">${username}</span>
            <i class="fas fa-chevron-down"></i>
          </button>
          <div id="user-dropdown" class="hidden absolute mt-2 w-48 bg-white rounded-md shadow-lg z-10 text-sm left-0 md:right-0 border border-blue-200">
            <a href="/cuenta" class="block px-4 py-2 hover:bg-gray-100 text-gray-700">Mi cuenta</a>
            <div class="border-t border-gray-100"></div>
            <button id="logout-button" class="block w-full text-left px-4 py-2 text-red-600 hover:bg-red-50">Cerrar sesión</button>
          </div>
        </div>`;

      centerNav.innerHTML = links;
      rightNav.innerHTML = dropdown;
      rightNav.classList.remove("opacity-0");

      const mobileAll = document.getElementById("mobile-nav-all");
      if (mobileAll) {
        mobileAll.innerHTML = links + dropdown;
        bindDropdownEvents(mobileAll);
      }

      bindDropdownEvents(document);
    }

    function showGuestLinks() {
      const center = `
        <a href="/analisis" class="block text-base font-semibold text-gray-800 hover:text-blue-600">Partidos</a>
        <a href="/funcionalidades" class="block text-base font-semibold text-gray-800 hover:text-blue-600">Funcionalidades</a>
        <a href="/planes" class="block text-base font-semibold text-gray-800 hover:text-blue-600">Planes</a>`;

      const right = `
        <a href="/login" class="block text-base font-semibold text-gray-800 hover:text-blue-500">Iniciar sesión</a>
        <a href="/registro" class="block w-fit text-base font-semibold px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition">Registrarse</a>`;

      centerNav.innerHTML = center;
      rightNav.innerHTML = right;
      rightNav.classList.remove("opacity-0");

      const mobileAll = document.getElementById("mobile-nav-all");
      if (mobileAll) {
        mobileAll.innerHTML = center + right;
      }
    }

    function bindDropdownEvents(scope) {
      const btn = scope.querySelector("#user-menu-button");
      const dropdown = scope.querySelector("#user-dropdown");
      const logout = scope.querySelector("#logout-button");

      btn?.addEventListener("click", (e) => {
        e.stopPropagation();
        dropdown?.classList.toggle("hidden");
      });

      logout?.addEventListener("click", () => {
        clearSession();
        window.location.href = "/";
      });

      document.addEventListener("click", (e) => {
        if (!scope.contains(e.target)) {
          dropdown?.classList.add("hidden");
        }
      });
    }

    window.addEventListener("usernameUpdated", (event) => {
      const newUsername = event.detail.username;
      const userNameSpan = document.querySelector("#user-name");
      if (userNameSpan) {
        userNameSpan.textContent = newUsername;
      }
    });

    checkToken();
  });
</script>

