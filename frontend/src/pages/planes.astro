---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout>
  <section class="max-w-5xl mx-auto px-4 py-16 text-center mt-8">
    <div
      class="flex flex-col sm:flex-col md:flex-row gap-8 justify-center items-stretch"
    >
      <!-- Plan mensual -->
      <div
        tabindex="0"
        class="plan-card flex-1 min-w-[260px] max-w-[340px] bg-gradient-to-br from-blue-50 to-white border border-blue-200 rounded-2xl shadow-md p-8 flex flex-col justify-between cursor-pointer transition-all duration-200 focus-within:border-blue-600 hover:border-blue-600 mx-auto"
        data-plan="mensual"
      >
        <h2 class="text-xl font-bold text-blue-600 mb-2">Mensual</h2>
        <p class="text-3xl font-extrabold text-gray-900 mb-4">19,90€</p>
        <ul class="text-gray-700 space-y-2 mb-6 text-base text-left">
          <li>✔ Acceso completo a métodos</li>
          <li>✔ Actualización diaria</li>
          <li>✔ Guardado de favoritos</li>
        </ul>
        <a
          href="/checkout?plan=mensual"
          class="bg-blue-600 text-white px-6 py-2 rounded font-semibold hover:bg-blue-700 transition"
        >
          Contratar
        </a>
      </div>
      <!-- Plan trimestral -->
      <div
        tabindex="0"
        class="plan-card flex-1 min-w-[260px] max-w-[340px] bg-gradient-to-br from-blue-50 to-white border border-blue-200 rounded-2xl shadow-md p-8 flex flex-col justify-between cursor-pointer transition-all duration-200 focus-within:border-blue-600 hover:border-blue-600 mx-auto"
        data-plan="trimestral"
      >
        <h2 class="text-xl font-bold text-blue-600 mb-2">Trimestral</h2>
        <p class="text-3xl font-extrabold text-gray-900 mb-4">49,90€</p>
        <ul class="text-gray-700 space-y-2 mb-6 text-base text-left">
          <li>✔ Todo lo del plan mensual</li>
          <li>✔ <del>59,70€</del> (precio normal)</li>
          <li>✔ Ahorra 9,80€</li>
        </ul>
        <a
          href="/checkout?plan=trimestral"
          class="bg-blue-600 text-white px-6 py-2 rounded font-semibold hover:bg-blue-700 transition"
        >
          Contratar
        </a>
      </div>
      <!-- Plan anual -->
      <div
        tabindex="0"
        class="plan-card flex-1 min-w-[260px] max-w-[340px] bg-gradient-to-br from-blue-50 to-white border border-blue-200 rounded-2xl shadow-md p-8 flex flex-col justify-between cursor-pointer transition-all duration-200 focus-within:border-blue-600 hover:border-blue-600 mx-auto"
        data-plan="anual"
      >
        <h2 class="text-xl font-bold text-blue-600 mb-2">Anual</h2>
        <p class="text-3xl font-extrabold text-gray-900 mb-4">199,00€</p>
        <ul class="text-gray-700 space-y-2 mb-6 text-base text-left">
          <li>✔ Todo lo del plan mensual</li>
          <li>✔ <del>238,80€</del> (precio normal)</li>
          <li>✔ Ahorra 39,80€</li>
        </ul>
        <a
          href="/checkout?plan=anual"
          class="bg-blue-600 text-white px-6 py-2 rounded font-semibold hover:bg-blue-700 transition"
        >
          Contratar
        </a>
      </div>
    </div>
    <script type="module">
      // Añade borde azul al hacer click en la tarjeta
      document.querySelectorAll(".plan-card").forEach((card) => {
        card.addEventListener("click", function () {
          document
            .querySelectorAll(".plan-card")
            .forEach((c) => c.classList.remove("!border-blue-600"));
          this.classList.add("!border-blue-600");
        });
      });
    </script>
  </section>
</Layout>
