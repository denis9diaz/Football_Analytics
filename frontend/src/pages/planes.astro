---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
import "animate.css";
---

<Layout>
  <section class="max-w-5xl mx-auto px-4 py-16 text-center mt-8">
    <div
      class="flex flex-col sm:flex-col md:flex-row gap-8 justify-center items-stretch"
    >
      <!-- Plan mensual -->
      <div
        tabindex="0"
        class="plan-card flex-1 min-w-[260px] max-w-[340px] bg-gradient-to-br from-blue-100 via-blue-50 to-white border border-blue-300 rounded-3xl shadow-lg p-8 flex flex-col justify-between cursor-pointer transition-transform transform hover:scale-105 duration-300 focus-within:border-blue-700 hover:border-blue-700 mx-auto animate__animated animate__fadeInUp"
        style="animation-delay: 0.2s;"
        data-plan="mensual"
      >
        <h2 class="text-2xl font-extrabold text-blue-700 mb-2">Mensual</h2>
        <p class="text-4xl font-black text-gray-900 mb-4">19,90€</p>
        <ul class="text-gray-800 space-y-3 mb-6 text-lg text-left">
          <li>✔ Acceso completo</li>
          <li>✔ Actualización diaria</li>
          <li>✔ Guardado de favoritos</li>
        </ul>
        <a
          href="/checkout?plan=mensual"
          class="bg-blue-700 text-white px-6 py-3 rounded-lg font-bold hover:bg-blue-800 transition"
        >
          Contratar
        </a>
      </div>
      <!-- Plan trimestral -->
      <div
        tabindex="0"
        class="plan-card flex-1 min-w-[260px] max-w-[340px] bg-gradient-to-br from-blue-100 via-blue-50 to-white border border-blue-300 rounded-3xl shadow-lg p-8 flex flex-col justify-between cursor-pointer transition-transform transform hover:scale-105 duration-300 focus-within:border-blue-700 hover:border-blue-700 mx-auto animate__animated animate__fadeInUp"
        style="animation-delay: 0.4s;"
        data-plan="trimestral"
      >
        <h2 class="text-2xl font-extrabold text-blue-700 mb-2">Trimestral</h2>
        <p class="text-4xl font-black text-gray-900 mb-4">49,90€</p>
        <ul class="text-gray-800 space-y-3 mb-6 text-lg text-left">
          <li>✔ Todo lo del plan mensual</li>
          <li>✔ <del>59,70€</del> (precio normal)</li>
          <li>✔ Ahorra 9,80€</li>
        </ul>
        <a
          href="/checkout?plan=trimestral"
          class="bg-blue-700 text-white px-6 py-3 rounded-lg font-bold hover:bg-blue-800 transition"
        >
          Contratar
        </a>
      </div>
      <!-- Plan anual -->
      <div
        tabindex="0"
        class="plan-card flex-1 min-w-[260px] max-w-[340px] bg-gradient-to-br from-blue-100 via-blue-50 to-white border border-blue-300 rounded-3xl shadow-lg p-8 flex flex-col justify-between cursor-pointer transition-transform transform hover:scale-105 duration-300 focus-within:border-blue-700 hover:border-blue-700 mx-auto animate__animated animate__fadeInUp"
        style="animation-delay: 0.6s;"
        data-plan="anual"
      >
        <h2 class="text-2xl font-extrabold text-blue-700 mb-2">Anual</h2>
        <p class="text-4xl font-black text-gray-900 mb-4">199,00€</p>
        <ul class="text-gray-800 space-y-3 mb-6 text-lg text-left">
          <li>✔ Todo lo del plan mensual</li>
          <li>✔ <del>238,80€</del> (precio normal)</li>
          <li>✔ Ahorra 39,80€</li>
        </ul>
        <a
          href="/checkout?plan=anual"
          class="bg-blue-700 text-white px-6 py-3 rounded-lg font-bold hover:bg-blue-800 transition"
        >
          Contratar
        </a>
      </div>
    </div>
    <script type="module">
      // Añade borde azul al hacer click en la tarjeta
      document.querySelectorAll(".plan-card").forEach((card) => {
        card.addEventListener("click", function () {
          document
            .querySelectorAll(".plan-card")
            .forEach((c) => c.classList.remove("!border-blue-700"));
          this.classList.add("!border-blue-700");
        });
      });
    </script>
  </section>
</Layout>
